#include "stdafx.h"
#include<fstream>
#include <iostream>
using namespace std;

//creating function prototype
void admin_interface();
void customer_interface();

   //function for entering into the program
void user_interface()
{
	int choice;
	do
	{
		cout << "................     Welcome to Phoenix Book Store            ..............." << endl;
		cout << "............................................................................." << endl;
		cout << "............................................................................." << endl;
		cout << endl << endl;
		cout << "YOU WANT TO ENTER THE STORE AS " << endl;
		cout << "1. ADMIN" << endl;
		cout << "2. CUSTOMER" << endl;
		cout << "3. EXIT" << endl;
		cout << "Enter your choice" << endl;
		cin >> choice;
		switch (choice)
		{
		case 1:admin_interface();
			break;
		case 2:customer_interface();
			break;
		case 3:
			break;
		}
	} while (choice != 3);
}

